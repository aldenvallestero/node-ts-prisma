generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  profile Profile?
}

model Profile {
  id Int @id @default(autoincrement())
  role String
  user User @relation(fields: [userId], references: [id])
  userId Int @unique

}
